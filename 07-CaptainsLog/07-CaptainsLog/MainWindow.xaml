<Window x:Class="_07_CaptainsLog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_07_CaptainsLog"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DataGrid x:Name="gridLogEntries" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" Height="245" Width="497" SelectionMode="Extended" SelectionUnit="FullRow" SelectionChanged="gridLogEntries_SelectionChanged"/>
        <Button x:Name="buttonAddEntry" Content="Add Entry" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="160" RenderTransformOrigin="-2.907,0.525" Height="49" Click="buttonAddEntry_Click" Background="#FF418EDA" FontWeight="Bold"/>
        <Button x:Name="buttonRemoveEntry" Content="Remove Entry" HorizontalAlignment="Left" Margin="178,10,0,0" VerticalAlignment="Top" Width="160" Height="49" Click="buttonRemoveEntry_Click" Background="#FFE04343" FontWeight="Bold"/>
        <Button x:Name="buttonSaveEntries" Content="Save Entries" HorizontalAlignment="Left" Margin="347,10,0,0" VerticalAlignment="Top" Width="160" Height="49" Click="buttonSaveEntries_Click" FontWeight="Bold" Background="#FF50CB44"/>

    </Grid>
</Window>
